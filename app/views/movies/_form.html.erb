<%= form_with(model: movie, local: true) do |f| %>
  <%= render 'shared/errors', object: movie %>
  <%= movie.errors.full_messages.to_sentence %>
  <%= f.label :title %>
  <br />
  <%= f.text_field :title, autofocus: true %>
  <br />
  <%= f.label :description %>
  <br />
  <%= f.text_area :description, rows: 10 %>
  <br />
  <%= f.label :rating %>
  <br />
  <%= f.text_field :rating %>
  <br />
  <%= f.label :released_on %>
  <br />
  <%= f.date_field :released_on, {class: "date"} %>
  <br />
  <%= f.label :total_gross %>
  <br />
  <%= f.number_field :total_gross %>
  <br />
  <%= f.label :director %>
  <%= f.text_field :director %>
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>
  <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
  <div>
    <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %>
  </div>
  <%= f.submit %>
<% end %>
